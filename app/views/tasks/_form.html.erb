<%= form_for [@project ,@task] do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :estimate %><br />
    <%= f.select :estimate, @estimates %>
  </div>
  <div class="field">
    <%= f.label :status %><br />
    <%= f.select :status, @statuses %>
  </div>
  <div class="field">
    <%= f.label :owns %><br />
    <%= f.select :owns, @members %>
  </div>
  <div class="hidden">
    <%= f.hidden_field :user_id, :value => current_user.id %>
  </div>
  <div class="hidden">
    <%= f.hidden_field :project_id, :value => @project.id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
